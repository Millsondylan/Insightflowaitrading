{
  "framework": "react",
  "buildTool": "vite",
  "sourceDir": "client-legacy",
  "entryPoints": {
    "main": "src/main.tsx",
    "app": "src/App.tsx"
  },
  "build": {
    "outDir": "dist",
    "sourcemap": true,
    "minify": false
  },
  "devServer": {
    "port": 3000,
    "host": true
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^7.0.0",
    "@vitejs/plugin-react": "^4.6.0"
  },
  "lovable": {
    "supportsTailwind": true,
    "editableComponents": true,
    "visualEditing": true,
    "componentLibrary": "radix-ui",
    "styling": "tailwindcss"
  },
  "include": [
    "client-legacy/src/**/*.{ts,tsx,js,jsx}",
    "client-legacy/src/**/*.css",
    "client-legacy/index.html",
    "client-legacy/package.json",
    "client-legacy/vite.config.ts",
    "client-legacy/tailwind.config.js",
    "client-legacy/tsconfig.json"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    "build/**",
    ".next/**",
    "app/**",
    "server/**",
    "supabase/**"
  ],
  "ignoreNextJS": true,
  "forceReactVite": true
} 