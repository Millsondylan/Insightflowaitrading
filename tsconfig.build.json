{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/pages/**/*.tsx",
    "src/components/**/*.tsx",
    "src/lib/**/*.ts",
    "src/hooks/**/*.ts",
    "src/contexts/**/*.tsx",
    "src/types/**/*.ts",
    "src/api/**/*.ts",
    "src/integrations/**/*.ts",
    "src/main.tsx",
    "src/App.tsx"
  ],
  "exclude": [
    "**/*.lovable.tsx",
    "**/*.lovable.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "node_modules",
    "dist",
    "src/lovable-demo/**/*",
    "src/modules/**/*.lovable.*"
  ]
} 